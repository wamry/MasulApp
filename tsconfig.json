{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "noEmit": true,
    "baseUrl": "./src/",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@i18n": ["i18n"],
      "@i18n/*": ["i18n/*"],
      "@navigation": ["navigation"],
      "@navigation/*": ["navigation/*"],
      "@screens": ["screens"],
      "@screens/*": ["screens/*"],
      "@store": ["store"],
      "@store/*": ["store/*"],
      "@theme": ["theme"],
      "@theme/*": ["theme/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@api": ["api"],
      "@api/*": ["api/*"],
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
  },
  "include": ["src"],
}